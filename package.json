{
  "name": "nesthome-backend",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Nesthome Backend API Server",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "mkdir -p dist && npx esbuild server/index.ts --platform=node --bundle --format=esm --outdir=dist --packages=external --target=node20",
    "build:server": "npm run build",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "zod": "^3.25.76",
    "zod-validation-error": "^3.4.0",
    "resend": "^6.5.2",
    "googleapis": "^148.0.0",
    "firebase-admin": "^13.6.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "memorystore": "^1.6.7",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "@neondatabase/serverless": "^0.10.4",
    "connect-pg-simple": "^10.0.0",
    "esbuild": "^0.25.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^20.19.0",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/connect-pg-simple": "^7.0.3",
    "typescript": "^5.6.3",
    "tsx": "^4.20.5",
    "drizzle-kit": "^0.31.4"
  }
}
